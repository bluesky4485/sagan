<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<!--
    Configuration file for UrlRewriteFilter. See:
    http://www.tuckey.org/urlrewrite/
    http://urlrewritefilter.googlecode.com/svn/trunk/src/doc/manual/4.0/guide.html
    http://urlrewritefilter.googlecode.com/svn/trunk/src/doc/manual/4.0/index.html
    http://localhost:8080/rewrite-status (only works when running locally)
-->
<urlrewrite use-query-string="true">
    <rule>
        <name>Legacy schema requests</name>
        <from>^/schema(/?.*)$</from>
        <to type="permanent-redirect" last="true">http://schema.spring.io$1</to>
    </rule>
    <rule>
        <name>Legacy interface21 blog requests</name>
        <condition name="host">blog.interface21.com</condition>
        <to type="permanent-redirect" last="true">http://spring.io/blog</to>
    </rule>
    <rule>
        <name>Legacy interface21 www requests</name>
        <condition name="host">^(www.)?interface21.com</condition>
        <to type="permanent-redirect" last="true">http://spring.io</to>
    </rule>
    <rule>
        <name>Legacy static docroot requests</name>
        <condition name="host">static.spring(framework|source).org</condition>
        <from>^/?$</from>
        <to type="temporary-redirect" last="true">http://spring.io/docs</to>
    </rule>
    <rule>
        <name>Legacy static docs</name>
        <condition name="host">static.spring(framework|source).org</condition>
        <from>^(/.+)$</from>
        <to type="permanent-redirect" last="true">http://docs.spring.io$1</to>
    </rule>
    <rule>
        <name>Legacy forum requests</name>
        <condition name="host">forum.spring(framework|source).org</condition>
        <to type="permanent-redirect" last="true">http://forum.spring.io$1</to>
    </rule>
    <rule>
        <name>Legacy site docroots</name>
        <condition name="host">^(www.)?spring(framework|source).org</condition>
        <from>^(/?)$</from>
        <to type="permanent-redirect" last="true">http://spring.io</to>
    </rule>
    <rule>
        <name>GSG trailing slash</name>
        <note>https://www.pivotaltracker.com/story/show/52214321</note>
        <from>/guides/gs/([^/]+)$</from>
        <to type="permanent-redirect" last="true">/guides/gs/$1/</to>
    </rule>
    <rule>
        <name>Tutorial root trailing slash</name>
        <note>https://www.pivotaltracker.com/story/show/52214321</note>
        <from>/guides/tutorials/([^/]+)$</from>
        <to type="permanent-redirect" last="true">/guides/tutorials/$1/</to>
    </rule>
    <rule>
        <name>Tutorial page trailing slash</name>
        <note>https://www.pivotaltracker.com/story/show/52214321</note>
        <from>/guides/tutorials/(.+)/(\d{1,2})$</from>
        <to type="permanent-redirect" last="true">/guides/tutorials/$1/$2/</to>
    </rule>
    <rule>
        <name>Legacy GGTS welcome page</name>
        <note>https://www.pivotaltracker.com/story/show/54276930</note>
        <condition name="host">www.springsource.org</condition>
        <from>/ggts/welcome</from>
        <to type="temporary-redirect" last="true">http://grails.org/products/ggts</to>
    </rule>
    <rule>
        <name>Legacy STS welcome page requests</name>
        <note>https://www.pivotaltracker.com/story/show/54679580</note>
        <condition name="host">www.springsource.org</condition>
        <from>/sts/welcome</from>
        <to type="permanent-redirect" last="true">http://spring.io/tools/sts/welcome</to>
    </rule>
    <rule>
        <name>Legacy "community download page" requests</name>
        <note>For now simply redirect to /projects page</note>
        <condition name="host">www.springsource.org</condition>
        <from>^/download(/community)?$</from>
        <to type="temporary-redirect" last="true">http://spring.io/projects</to>
    </rule>
    <rule>
        <name>Legacy "community download page" form request</name>
        <note>For now simply redirect to /projects page</note>
        <condition name="host">www.springsource.org</condition>
        <from>^/spring-community-download$</from>
        <to type="temporary-redirect" last="true">http://spring.io/projects</to>
    </rule>
    <rule>
        <name>Legacy Eclipse Marketplace requests</name>
        <condition name="host">www.springsource.(org|com)</condition>
        <from>(/products)?/eclipse-downloads</from>
        <to type="temporary-redirect" last="true">http://spring.io/tools/eclipse</to>
    </rule>
    <rule>
        <note>Support inbound link from http://grails.org/products/ggts [#54277050]</note>
        <condition name="host">www.springsource.org</condition>
        <from>/groovy-grails-tool-suite-download</from>
        <to type="permanent-redirect" last="true">http://spring.io/tools/ggts</to>
    </rule>
    <rule>
        <name>Legacy case study PDFs</name>
        <note>https://www.pivotaltracker.com/story/show/54370286
        Temporarily serving case study PDFs from old drupal site (with a new name) until
        we move everything over to the new assets S3 bucket (see
        https://www.pivotaltracker.com/epic/show/749753)</note>
        <condition name="host">www.springsource.org</condition>
        <from>^(/files/uploads/.*)$</from>
        <to type="temporary-redirect" last="true">http://drupal.spring.io$1</to>
    </rule>
    <rule>
        <name>Legacy blog resource reqeusts</name>
        <from>^(/blog)?(/wp-content/.*)$</from>
        <to type="temporary-redirect" last="true">http://wp.spring.io$2</to>
    </rule>
    <rule>
        <name>Rossen's WebSocket blog post</name>
        <from>^.*(/2013/07/24/spring-framework-4-0-m2-websocket-messaging-architectures/?)</from>
        <to type="temporary-redirect" last="true">http://wp.spring.io$1</to>
    </rule>
    <rule>
        <name>Legacy blog images</name>
        <note>https://www.pivotaltracker.com/story/show/54370286
        Temporarily serving blog images from old blog site (with a new name) until
        we move everything over to the new assets S3 bucket (see
        https://www.pivotaltracker.com/epic/show/749753)</note>
        <condition name="host">blog.springsource.org</condition>
        <from>^(/wp-content/uploads/.*)$</from>
        <to type="temporary-redirect" last="true">http://wp.spring.io$1</to>
    </rule>
    <rule>
        <name>Legacy STS blog feed requests</name>
        <note>Redirect to old blog site (now at wp.spring.io) for old versions of STS hard
        coded to hit blog.springsource.com/main/feed/ and expecting RSS as opposed to Atom.
        </note>
        <condition name="host">blog.springsource.com</condition>
        <from>/main/feed/</from>
        <to type="temporary-redirect" last="true">http://wp.spring.io/main/feed/</to>
    </rule>
    <rule>
        <name>Legacy blog posts</name>
        <note>Redirect all blog requests [#54767200]. Note that the new blog has the same
        date-based slug scheme, so most blog paths should redirect in a generic fashion.
        Exceptions to this rule will be explicitly mapped. Captures both blog.s2.org and
        blog.s2.com as there are still instances of .com links in the wild (some on the
        blog itself).</note>
        <condition name="host">blog.springsource.(org|com)</condition>
        <from>^(.*)$</from>
        <to type="permanent-redirect" last="true">http://spring.io/blog$1</to>
    </rule>
    <rule>
        <name>Legacy blog feed</name>
        <note>Everything from legacy blogs gets rewritten to spring.io, but in the case
        of /blog/feed/ (or blog category subfeeds) things should redirect to /blog.atom
        </note>
        <from>^/blog/(.*/)?feed/?(atom/)?$</from>
        <to type="temporary-redirect" last="true">http://spring.io/blog.atom</to>
    </rule>
    <rule>
        <name>YouTube</name>
        <note>https://www.pivotaltracker.com/story/show/54309374
        Provide a consistent URL abstraction for our videos while we work out the new
        name of our youtube channel.
        </note>
        <from>/videos?</from>
        <to type="temporary-redirect" last="true">http://www.youtube.com/springsourcedev</to>
    </rule>
    <rule>
        <name>GSG listing</name>
        <note>https://www.pivotaltracker.com/story/show/54212676
        Issue 302 redirect from /guides/gs to /guides#gs</note>
        <from>/guides/gs[/]?$</from>
        <to type="temporary-redirect" last="true">/guides#gs</to>
    </rule>
    <rule>
        <name>Tutorial listing</name>
        <note>https://www.pivotaltracker.com/story/show/54212676
        Issue 302 redirect from /guides/tutorials to /guides#tutorials</note>
        <from>/guides/tutorials[/]?$</from>
        <to type="temporary-redirect" last="true">/guides#tutorials</to>
    </rule>
    <rule>
        <name>Remove www</name>
        <note>Redirect www.spring.io => spring.io[#54747656]</note>
        <condition name="host">www.spring.io</condition>
        <from>^(.*)$</from>
        <to type="permanent-redirect" last="true">http://spring.io$1</to>
    </rule>
    <rule>
        <name>Project pages</name>
        <condition name="host" next="or">spring.io</condition>
        <condition name="host">(www.)?springsource.org</condition>
        <from>^(/projects)?(/spring-.+)$</from>
        <to type="temporary-redirect" last="true">http://projects.spring.io$2</to>
    </rule>
    <rule>
        <name>LinkedIn</name>
        <condition name="host">www.springsource.org</condition>
        <from>^/linkedin$</from>
        <to type="temporary-redirect" last="true">http://www.linkedin.com/groups/Spring-Users-46964?gid=46964</to>
    </rule>
</urlrewrite>
